{
  "name": "wsl-reveal-explorer",
  "displayName": "WSL Reveal in File Explorer",
  "description": "Seamlessly open Windows File Explorer from WSL with zero configuration. Right-click any file or folder to reveal it in Windows Explorer.",
  "version": "1.3.2",
  "icon": "assets/imgs/logo.jpg",
  "author": {
    "name": "Feras Abdalrahman",
    "url": "https://marketplace.visualstudio.com/publishers/doonfrs"
  },
  "publisher": "doonfrs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doonfrs/vscode-wsl-reveal-explorer"
  },
  "bugs": {
    "url": "https://github.com/doonfrs/vscode-wsl-reveal-explorer/issues"
  },
  "homepage": "https://github.com/doonfrs/vscode-wsl-reveal-explorer#readme",
  "keywords": [
    "wsl",
    "windows",
    "explorer",
    "file manager",
    "reveal",
    "context menu",
    "linux",
    "ubuntu"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wsl-reveal-explorer.revealInExplorer",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "wsl-reveal-explorer.test",
        "title": "Test WSL Reveal Extension"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "wsl-reveal-explorer.revealInExplorer",
          "when": "remoteName == wsl || remoteName =~ /^ssh-remote/",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "WSL Reveal Explorer",
      "properties": {
        "wsl-reveal-explorer.defaultDistributionName": {
          "type": "string",
          "default": "",
          "description": "Default WSL distribution name to use when auto-detection fails (e.g., 'Ubuntu-22.04', 'Ubuntu2'). Leave empty to use automatic detection."
        },
        "wsl-reveal-explorer.pathPrefix": {
          "type": "string",
          "default": "\\\\wsl$",
          "description": "Path prefix for network paths. Use '\\\\wsl$' for WSL, or custom network paths like '\\\\server\\share' for Remote SSH mounted drives."
        },
        "wsl-reveal-explorer.customCommand": {
          "type": "string",
          "default": "",
          "description": "Custom command to open folders. Use {path} as placeholder for the folder path. Leave empty to use default Windows Explorer."
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"No tests specified\""
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
} 